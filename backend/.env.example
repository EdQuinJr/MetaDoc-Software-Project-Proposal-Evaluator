# Environment Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
# Choose one database type and uncomment the appropriate line:
# MySQL Database
DATABASE_URL=mysql+pymysql://username:password@localhost:3306/metadoc_db

# PostgreSQL Database  
# DATABASE_URL=postgresql://username:password@localhost:5432/metadoc_db

# SQLite (for development only)
# DATABASE_URL=sqlite:///metadoc.db

# Google API Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:5000/api/v1/auth/callback

# Google Drive Service Account (for file access)
GOOGLE_SERVICE_ACCOUNT_FILE=path/to/service-account-key.json

# Google Gemini AI (Optional - Module 4)
GEMINI_API_KEY=your_gemini_api_key_here

# Security Configuration
SECRET_KEY=your_super_secret_key_here_change_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here

# File Storage Configuration
UPLOAD_FOLDER=./uploads
MAX_CONTENT_LENGTH=52428800  # 50MB max file size
TEMP_STORAGE_PATH=./temp_files

# Redis Configuration (for Celery background tasks)
REDIS_URL=redis://localhost:6379/0

# Performance & Security Settings
SESSION_TIMEOUT=3600  # 1 hour
API_RATE_LIMIT=100  # requests per minute
ENABLE_AUDIT_LOGGING=True

# Institution Configuration
ALLOWED_EMAIL_DOMAINS=cit.edu,school.edu.ph
INSTITUTION_NAME=Cebu Institute of Technology - University

# NLP Configuration
NLP_MODEL_PATH=./models
DEFAULT_LANGUAGE=en
MAX_DOCUMENT_WORDS=15000
MIN_DOCUMENT_WORDS=50

# Report Configuration
REPORTS_STORAGE_PATH=./reports
ENABLE_PDF_EXPORT=True
ENABLE_CSV_EXPORT=True

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/metadoc.log