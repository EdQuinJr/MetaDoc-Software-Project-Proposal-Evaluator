# Environment Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
# Choose one database type and uncomment the appropriate line:
# MySQL Database (XAMPP/Local)
DATABASE_URL=mysql+pymysql://root:@localhost:3306/metadoc_db

# PostgreSQL Database  
# DATABASE_URL=postgresql://username:password@localhost:5432/metadoc_db

# SQLite (for development only)
# DATABASE_URL=sqlite:///metadoc.db

# Google OAuth 2.0 Configuration
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/v1/auth/callback

# Google Drive Service Account
# Place your service account JSON file in: backend/credentials/google-credentials.json
GOOGLE_SERVICE_ACCOUNT_FILE=credentials/google-credentials.json

# Google Gemini AI (Optional - Module 4)
GEMINI_API_KEY=your_gemini_api_key_here

# Security Configuration
# Generate random keys: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-this-to-random-secret-key-in-production
JWT_SECRET_KEY=change-this-to-random-jwt-secret-key

# File Storage Configuration
UPLOAD_FOLDER=./uploads
MAX_CONTENT_LENGTH=52428800  # 50MB max file size
TEMP_STORAGE_PATH=./temp_files

# Redis Configuration (for Celery background tasks)
REDIS_URL=redis://localhost:6379/0

# Performance & Security Settings
SESSION_TIMEOUT=3600  # 1 hour
API_RATE_LIMIT=100  # requests per minute
ENABLE_AUDIT_LOGGING=True

# Institution Configuration
# Add allowed email domains separated by commas (leave empty to allow all)
ALLOWED_EMAIL_DOMAINS=
INSTITUTION_NAME=Your Institution Name

# NLP Configuration
NLP_MODEL_PATH=./models
DEFAULT_LANGUAGE=en
MAX_DOCUMENT_WORDS=15000
MIN_DOCUMENT_WORDS=50

# Report Configuration
REPORTS_STORAGE_PATH=./reports
ENABLE_PDF_EXPORT=True
ENABLE_CSV_EXPORT=True

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/metadoc.log